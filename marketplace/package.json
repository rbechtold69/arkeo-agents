{
  "name": "arkeo-data-engine-dashboard-core",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.cjs -i admin/src/styles.css -o admin/build/dashboard.css --minify",
    "build:js": "esbuild admin/src/dashboard.jsx --bundle --format=esm --target=es2018 --outfile=admin/build/dashboard.js --minify --sourcemap",
    "build": "mkdir -p admin/build && npm run build:css && npm run build:js"
  },
  "dependencies": {
    "chart.js": "^4.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "tailwindcss": "^3.4.14"
  }
}
